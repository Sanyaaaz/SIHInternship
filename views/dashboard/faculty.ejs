<div class="min-h-screen bg-background py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Faculty Dashboard</h1>
            <p class="text-gray-600 mt-2">Monitor students and provide guidance</p>
        </div>

        <!-- Analytics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-5 gap-6 mb-8">
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="users" class="h-6 w-6 text-blue-600"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-2xl font-bold text-gray-900"><%= analytics.totalStudents %></h3>
                        <p class="text-sm text-gray-600">Students</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="file-text" class="h-6 w-6 text-purple-600"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-2xl font-bold text-gray-900"><%= analytics.totalApplications %></h3>
                        <p class="text-sm text-gray-600">Applications</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="check-circle" class="h-6 w-6 text-success"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-2xl font-bold text-gray-900"><%= analytics.acceptedApplications %></h3>
                        <p class="text-sm text-gray-600">Accepted</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="clock" class="h-6 w-6 text-secondary"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-2xl font-bold text-gray-900"><%= analytics.pendingApplications %></h3>
                        <p class="text-sm text-gray-600">Pending</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="message-circle" class="h-6 w-6 text-primary"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-2xl font-bold text-gray-900"><%= analytics.feedbackGiven %></h3>
                        <p class="text-sm text-gray-600">Feedback</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Student Monitoring -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                    <div class="p-6 border-b border-gray-200">
                        <h2 class="text-xl font-semibold text-gray-900">Student Monitoring</h2>
                    </div>
                    <div class="p-6">
                        <% if (students && students.length > 0) { %>
                            <div class="overflow-x-auto">
                                <table class="min-w-full divide-y divide-gray-200">
                                    <thead class="bg-gray-50">
                                        <tr>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Student</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">University</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Applications</th>
                                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200">
                                        <% students.slice(0, 10).forEach(student => { %>
                                            <tr>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <div>
                                                        <div class="text-sm font-medium text-gray-900"><%= student.name %></div>
                                                        <div class="text-sm text-gray-500"><%= student.email %></div>
                                                    </div>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                                    <%= student.profile && student.profile.university ? student.profile.university : 'Not specified' %>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap">
                                                    <div class="text-sm text-gray-900">
                                                        Total: <%= student.applicationStats ? student.applicationStats.total : 0 %>
                                                    </div>
                                                    <div class="text-sm text-gray-500">
                                                        Accepted: <%= student.applicationStats ? student.applicationStats.accepted : 0 %>
                                                    </div>
                                                </td>
                                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                                    <button onclick="provideFeedback('<%= student._id %>', '<%= student.name %>')" 
                                                            class="text-primary hover:text-primary/80 mr-3">
                                                        Give Feedback
                                                    </button>
                                                    <button onclick="viewStudentDetails('<%= student._id %>')" 
                                                            class="text-gray-600 hover:text-gray-900">
                                                        View Details
                                                    </button>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-8">
                                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <i data-lucide="users" class="h-8 w-8 text-gray-400"></i>
                                </div>
                                <h3 class="text-lg font-medium text-gray-900 mb-2">No students found</h3>
                                <p class="text-gray-600">Students will appear here once they register</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Recent Applications -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                    <div class="p-6 border-b border-gray-200">
                        <h2 class="text-xl font-semibold text-gray-900">Recent Applications</h2>
                    </div>
                    <div class="p-6">
                        <% if (applications && applications.length > 0) { %>
                            <div class="space-y-4">
                                <% applications.slice(0, 5).forEach(application => { %>
                                    <div class="border border-gray-200 rounded-lg p-4">
                                        <div class="flex items-start justify-between">
                                            <div>
                                                <h3 class="font-semibold text-gray-900"><%= application.student.name %></h3>
                                                <p class="text-gray-600"><%= application.internship.title %> at <%= application.internship.company %></p>
                                                <div class="flex items-center space-x-4 mt-2 text-sm text-gray-500">
                                                    <span><%= application.internship.location %></span>
                                                    <span>Applied <%= new Date(application.createdAt).toLocaleDateString() %></span>
                                                </div>
                                            </div>
                                            <span class="px-2 py-1 text-xs font-medium rounded-full
                                                <%= application.status === 'pending' ? 'bg-yellow-100 text-yellow-800' :
                                                    application.status === 'accepted' ? 'bg-green-100 text-green-800' :
                                                    application.status === 'rejected' ? 'bg-red-100 text-red-800' :
                                                    'bg-blue-100 text-blue-800' %>">
                                                <%= application.status.charAt(0).toUpperCase() + application.status.slice(1) %>
                                            </span>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <p class="text-gray-600">No applications to display</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Feedback Form -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Provide Feedback</h3>
                    <form id="feedbackForm" class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Student</label>
                            <select name="studentId" required class="input-field">
                                <option value="">Select a student</option>
                                <% students.forEach(student => { %>
                                    <option value="<%= student._id %>"><%= student.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Type</label>
                            <select name="type" required class="input-field">
                                <option value="">Select type</option>
                                <option value="mentoring">Mentoring</option>
                                <option value="evaluation">Evaluation</option>
                                <option value="guidance">Guidance</option>
                                <option value="progress">Progress Update</option>
                            </select>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Subject</label>
                            <input type="text" name="subject" required class="input-field" placeholder="Feedback subject">
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Note</label>
                            <textarea name="note" required rows="4" class="input-field" placeholder="Your feedback message"></textarea>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-2">Priority</label>
                            <select name="priority" class="input-field">
                                <option value="low">Low</option>
                                <option value="medium" selected>Medium</option>
                                <option value="high">High</option>
                            </select>
                        </div>
                        
                        <button type="submit" class="btn-primary w-full">
                            Submit Feedback
                        </button>
                    </form>
                </div>

                <!-- Recent Feedback -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Feedback</h3>
                    <% if (feedback && feedback.length > 0) { %>
                        <div class="space-y-3">
                            <% feedback.slice(0, 5).forEach(item => { %>
                                <div class="border-l-4 border-primary pl-3 py-2">
                                    <h4 class="font-medium text-gray-900 text-sm"><%= item.subject %></h4>
                                    <p class="text-gray-600 text-xs mb-1"><%= item.note.substring(0, 80) %>...</p>
                                    <p class="text-gray-500 text-xs">
                                        To: <%= item.student.name %> â€¢ <%= new Date(item.createdAt).toLocaleDateString() %>
                                    </p>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p class="text-gray-600 text-sm">No feedback given yet</p>
                    <% } %>
                </div>

                <!-- Quick Actions -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
                    <div class="space-y-3">
                        <button onclick="document.getElementById('feedbackForm').scrollIntoView()" 
                                class="block w-full px-4 py-2 text-left text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                            Give Feedback
                        </button>
                        <button class="block w-full px-4 py-2 text-left text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                            View All Students
                        </button>
                        <button class="block w-full px-4 py-2 text-left text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                            Generate Report
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Feedback Modal -->
<div id="feedbackModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden items-center justify-center z-50">
    <div class="bg-white rounded-lg p-6 max-w-md w-full mx-4">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Provide Feedback</h3>
        <form id="quickFeedbackForm" class="space-y-4">
            <input type="hidden" name="studentId" id="modalStudentId">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Student</label>
                <input type="text" id="modalStudentName" readonly class="input-field bg-gray-50">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Type</label>
                <select name="type" required class="input-field">
                    <option value="mentoring">Mentoring</option>
                    <option value="evaluation">Evaluation</option>
                    <option value="guidance">Guidance</option>
                    <option value="progress">Progress Update</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Subject</label>
                <input type="text" name="subject" required class="input-field" placeholder="Feedback subject">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Note</label>
                <textarea name="note" required rows="3" class="input-field" placeholder="Your feedback message"></textarea>
            </div>
            <div class="flex space-x-3">
                <button type="submit" class="btn-primary flex-1">Submit</button>
                <button type="button" onclick="closeFeedbackModal()" class="btn-outline flex-1">Cancel</button>
            </div>
        </form>
    </div>
</div>

<script>
// Feedback form handler
document.getElementById('feedbackForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData.entries());
    
    try {
        const response = await fetch('/api/faculty/feedback', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('Feedback submitted successfully!');
            this.reset();
            location.reload();
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        alert('Error submitting feedback');
        console.error(error);
    }
});

// Quick feedback modal
function provideFeedback(studentId, studentName) {
    document.getElementById('modalStudentId').value = studentId;
    document.getElementById('modalStudentName').value = studentName;
    document.getElementById('feedbackModal').classList.remove('hidden');
    document.getElementById('feedbackModal').classList.add('flex');
}

function closeFeedbackModal() {
    document.getElementById('feedbackModal').classList.add('hidden');
    document.getElementById('feedbackModal').classList.remove('flex');
}

// Quick feedback form handler
document.getElementById('quickFeedbackForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData.entries());
    
    try {
        const response = await fetch('/api/faculty/feedback', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('Feedback submitted successfully!');
            closeFeedbackModal();
            location.reload();
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        alert('Error submitting feedback');
        console.error(error);
    }
});

function viewStudentDetails(studentId) {
    // This would redirect to a detailed student view
    alert('Student details view would be implemented here');
}
</script>