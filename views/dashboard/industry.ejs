<div class="min-h-screen bg-background py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Industry Dashboard</h1>
            <p class="text-gray-600 mt-2">Manage your internship postings and applications</p>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="briefcase" class="h-6 w-6 text-blue-600"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-2xl font-bold text-gray-900"><%= stats.totalInternships %></h3>
                        <p class="text-sm text-gray-600">Total Internships</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="check-circle" class="h-6 w-6 text-success"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-2xl font-bold text-gray-900"><%= stats.activeInternships %></h3>
                        <p class="text-sm text-gray-600">Active</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="users" class="h-6 w-6 text-purple-600"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-2xl font-bold text-gray-900"><%= stats.totalApplications %></h3>
                        <p class="text-sm text-gray-600">Applications</p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="clock" class="h-6 w-6 text-secondary"></i>
                    </div>
                    <div class="ml-4">
                        <h3 class="text-2xl font-bold text-gray-900"><%= stats.pendingApplications %></h3>
                        <p class="text-sm text-gray-600">Pending Review</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Post New Internship -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                    <div class="p-6 border-b border-gray-200">
                        <h2 class="text-xl font-semibold text-gray-900">Post New Internship</h2>
                    </div>
                    <div class="p-6">
                        <form id="postInternshipForm" class="space-y-4">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Job Title</label>
                                    <input type="text" name="title" required class="input-field" placeholder="e.g. Software Engineering Intern">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Company</label>
                                    <input type="text" name="company" required class="input-field" placeholder="Company name">
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                                <textarea name="description" required rows="3" class="input-field" placeholder="Describe the internship role and responsibilities"></textarea>
                            </div>
                            
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Location</label>
                                    <input type="text" name="location" required class="input-field" placeholder="e.g. San Francisco, CA">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Type</label>
                                    <select name="type" required class="input-field">
                                        <option value="">Select type</option>
                                        <option value="Full-time">Full-time</option>
                                        <option value="Part-time">Part-time</option>
                                        <option value="Remote">Remote</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Duration</label>
                                    <input type="text" name="duration" required class="input-field" placeholder="e.g. 3 months">
                                </div>
                            </div>
                            
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Stipend</label>
                                    <input type="text" name="stipend" required class="input-field" placeholder="e.g. $4,000/month">
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Application Deadline</label>
                                    <input type="date" name="applicationDeadline" required class="input-field">
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Requirements (one per line)</label>
                                <textarea name="requirements" required rows="3" class="input-field" placeholder="List requirements, one per line"></textarea>
                            </div>
                            
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Skills (comma-separated)</label>
                                <input type="text" name="skills" required class="input-field" placeholder="e.g. JavaScript, React, Node.js">
                            </div>
                            
                            <button type="submit" class="btn-primary">
                                Post Internship
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Posted Internships -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                    <div class="p-6 border-b border-gray-200">
                        <h2 class="text-xl font-semibold text-gray-900">Your Internships</h2>
                    </div>
                    <div class="p-6">
                        <% if (internships && internships.length > 0) { %>
                            <div class="space-y-4">
                                <% internships.forEach(internship => { %>
                                    <div class="border border-gray-200 rounded-lg p-4">
                                        <div class="flex items-start justify-between">
                                            <div>
                                                <h3 class="font-semibold text-gray-900"><%= internship.title %></h3>
                                                <p class="text-gray-600"><%= internship.company %></p>
                                                <div class="flex items-center space-x-4 mt-2 text-sm text-gray-500">
                                                    <span><%= internship.location %></span>
                                                    <span><%= internship.type %></span>
                                                    <span><%= internship.applicationsCount %> applications</span>
                                                </div>
                                            </div>
                                            <div class="flex items-center space-x-2">
                                                <span class="px-2 py-1 text-xs font-medium rounded-full
                                                    <%= internship.status === 'active' ? 'bg-green-100 text-green-800' :
                                                        internship.status === 'closed' ? 'bg-red-100 text-red-800' :
                                                        'bg-gray-100 text-gray-800' %>">
                                                    <%= internship.status.charAt(0).toUpperCase() + internship.status.slice(1) %>
                                                </span>
                                                <button onclick="toggleInternshipStatus('<%= internship._id %>', '<%= internship.status %>')" 
                                                        class="text-primary hover:text-primary/80 text-sm">
                                                    <%= internship.status === 'active' ? 'Close' : 'Activate' %>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-8">
                                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <i data-lucide="briefcase" class="h-8 w-8 text-gray-400"></i>
                                </div>
                                <h3 class="text-lg font-medium text-gray-900 mb-2">No internships posted yet</h3>
                                <p class="text-gray-600">Post your first internship to start receiving applications</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Recent Applications -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Applications</h3>
                    <% if (applications && applications.length > 0) { %>
                        <div class="space-y-3">
                            <% applications.slice(0, 5).forEach(application => { %>
                                <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                    <div>
                                        <p class="font-medium text-gray-900 text-sm"><%= application.student.name %></p>
                                        <p class="text-gray-600 text-xs"><%= application.internship.title %></p>
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <span class="px-2 py-1 text-xs font-medium rounded-full
                                            <%= application.status === 'pending' ? 'bg-yellow-100 text-yellow-800' :
                                                application.status === 'accepted' ? 'bg-green-100 text-green-800' :
                                                application.status === 'rejected' ? 'bg-red-100 text-red-800' :
                                                'bg-blue-100 text-blue-800' %>">
                                            <%= application.status %>
                                        </span>
                                        <button onclick="reviewApplication('<%= application._id %>')" 
                                                class="text-primary hover:text-primary/80 text-xs">
                                            Review
                                        </button>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                        <a href="#" class="block text-center text-primary hover:text-primary/80 text-sm font-medium mt-4">
                            View All Applications
                        </a>
                    <% } else { %>
                        <p class="text-gray-600 text-sm">No applications yet</p>
                    <% } %>
                </div>

                <!-- Quick Actions -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
                    <div class="space-y-3">
                        <button onclick="document.getElementById('postInternshipForm').scrollIntoView()" 
                                class="block w-full px-4 py-2 text-left text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                            Post New Internship
                        </button>
                        <button class="block w-full px-4 py-2 text-left text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                            View All Applications
                        </button>
                        <button class="block w-full px-4 py-2 text-left text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                            Analytics Dashboard
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
// Post internship form handler
document.getElementById('postInternshipForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData.entries());
    
    try {
        const response = await fetch('/api/industry/internships', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('Internship posted successfully!');
            location.reload();
        } else {
            alert('Error: ' + result.error);
        }
    } catch (error) {
        alert('Error posting internship');
        console.error(error);
    }
});

// Toggle internship status
async function toggleInternshipStatus(internshipId, currentStatus) {
    const newStatus = currentStatus === 'active' ? 'closed' : 'active';
    
    try {
        const response = await fetch(`/api/industry/internships/${internshipId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ status: newStatus })
        });
        
        const result = await response.json();
        
        if (result.success) {
            location.reload();
        } else {
            alert('Error updating internship status');
        }
    } catch (error) {
        alert('Error updating internship status');
        console.error(error);
    }
}

// Review application
function reviewApplication(applicationId) {
    // This would open a modal or redirect to application review page
    alert('Application review functionality would be implemented here');
}
</script>