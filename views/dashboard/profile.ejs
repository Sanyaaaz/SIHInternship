<div class="min-h-screen bg-background py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">My Profile</h1>
            <p class="text-gray-600 mt-2">Manage your personal information and preferences</p>
        </div>

        <!-- Profile Form -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8">
            <form action="/dashboard/profile" method="POST" class="space-y-6">
                <!-- Basic Information -->
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Basic Information</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                                Full Name
                            </label>
                            <input
                                type="text"
                                id="name"
                                name="name"
                                value="<%= user.name %>"
                                required
                                class="input-field"
                            />
                        </div>
                        <div>
                            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                                Email Address
                            </label>
                            <input
                                type="email"
                                id="email"
                                value="<%= user.email %>"
                                disabled
                                class="input-field bg-gray-50 text-gray-500"
                            />
                            <p class="text-xs text-gray-500 mt-1">Email cannot be changed</p>
                        </div>
                    </div>
                </div>

                <!-- Contact Information -->
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Contact Information</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                                Phone Number
                            </label>
                            <input
                                type="tel"
                                id="phone"
                                name="phone"
                                value="<%= user.profile && user.profile.phone ? user.profile.phone : '' %>"
                                class="input-field"
                                placeholder="+1 (555) 123-4567"
                            />
                        </div>
                        <div>
                            <label for="university" class="block text-sm font-medium text-gray-700 mb-2">
                                <% if (user.role === 'student') { %>
                                    University/College
                                <% } else if (user.role === 'industry') { %>
                                    Company
                                <% } else { %>
                                    Institution
                                <% } %>
                            </label>
                            <input
                                type="text"
                                id="university"
                                name="<%= user.role === 'industry' ? 'company' : 'university' %>"
                                value="<%= user.profile && user.profile.university ? user.profile.university : (user.profile && user.profile.company ? user.profile.company : '') %>"
                                class="input-field"
                                placeholder="<%= user.role === 'student' ? 'Stanford University' : user.role === 'industry' ? 'Tech Corp Inc.' : 'University Name' %>"
                            />
                        </div>
                    </div>
                </div>

                <!-- Role-specific fields -->
                <% if (user.role === 'faculty') { %>
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Faculty Information</h2>
                    <div>
                        <label for="department" class="block text-sm font-medium text-gray-700 mb-2">
                            Department
                        </label>
                        <input
                            type="text"
                            id="department"
                            name="department"
                            value="<%= user.profile && user.profile.department ? user.profile.department : '' %>"
                            class="input-field"
                            placeholder="Computer Science"
                        />
                    </div>
                </div>
                <% } %>

                <!-- Bio -->
                <div>
                    <label for="bio" class="block text-sm font-medium text-gray-700 mb-2">
                        Bio
                    </label>
                    <textarea
                        id="bio"
                        name="bio"
                        rows="4"
                        class="input-field"
                        placeholder="Tell us about yourself, your interests, and your goals..."
                    ><%= user.profile && user.profile.bio ? user.profile.bio : '' %></textarea>
                </div>

                <!-- Skills (for students) -->
                <% if (user.role === 'student') { %>
                <div>
                    <label for="skills" class="block text-sm font-medium text-gray-700 mb-2">
                        Skills
                    </label>
                    <input
                        type="text"
                        id="skills"
                        name="skills"
                        value="<%= user.profile && user.profile.skills ? user.profile.skills.join(', ') : '' %>"
                        class="input-field"
                        placeholder="JavaScript, React, Python, Machine Learning"
                    />
                    <p class="text-xs text-gray-500 mt-1">Separate skills with commas</p>
                </div>
                <% } %>

                <!-- Social Links -->
                <div>
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Social Links</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label for="linkedin" class="block text-sm font-medium text-gray-700 mb-2">
                                LinkedIn Profile
                            </label>
                            <input
                                type="url"
                                id="linkedin"
                                name="linkedin"
                                value="<%= user.profile && user.profile.linkedin ? user.profile.linkedin : '' %>"
                                class="input-field"
                                placeholder="https://linkedin.com/in/yourprofile"
                            />
                        </div>
                        <% if (user.role === 'student') { %>
                        <div>
                            <label for="github" class="block text-sm font-medium text-gray-700 mb-2">
                                GitHub Profile
                            </label>
                            <input
                                type="url"
                                id="github"
                                name="github"
                                value="<%= user.profile && user.profile.github ? user.profile.github : '' %>"
                                class="input-field"
                                placeholder="https://github.com/yourusername"
                            />
                        </div>
                        <% } %>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="flex items-center justify-between pt-6 border-t border-gray-200">
                    <a
                        href="/dashboard"
                        class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors"
                    >
                        Cancel
                    </a>
                    <button
                        type="submit"
                        class="px-6 py-2 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors"
                    >
                        Save Changes
                    </button>
                </div>
            </form>
        </div>

        <!-- Account Settings -->
        <div class="mt-8 bg-white rounded-lg shadow-sm border border-gray-200 p-8">
            <h2 class="text-xl font-semibold text-gray-900 mb-4">Account Settings</h2>
            <div class="space-y-4">
                <div class="flex items-center justify-between py-3 border-b border-gray-200">
                    <div>
                        <h3 class="font-medium text-gray-900">Account Type</h3>
                        <p class="text-sm text-gray-500">Your current role in the platform</p>
                    </div>
                    <span class="px-3 py-1 bg-primary/10 text-primary rounded-full text-sm font-medium capitalize">
                        <%= user.role %>
                    </span>
                </div>
                <div class="flex items-center justify-between py-3 border-b border-gray-200">
                    <div>
                        <h3 class="font-medium text-gray-900">Member Since</h3>
                        <p class="text-sm text-gray-500">When you joined InternshipHub</p>
                    </div>
                    <span class="text-sm text-gray-700">
                        <%= new Date(user.createdAt).toLocaleDateString('en-US', { 
                            month: 'long', 
                            day: 'numeric', 
                            year: 'numeric' 
                        }) %>
                    </span>
                </div>
                <div class="flex items-center justify-between py-3">
                    <div>
                        <h3 class="font-medium text-gray-900">Change Password</h3>
                        <p class="text-sm text-gray-500">Update your account password</p>
                    </div>
                    <button class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                        Change Password
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>