<div class="min-h-screen bg-background py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Back Button -->
        <a
            href="/internships"
            class="inline-flex items-center space-x-2 text-primary hover:text-primary/80 mb-6 transition-colors"
        >
            <i data-lucide="arrow-left" class="h-5 w-5"></i>
            <span>Back to Internships</span>
        </a>

        <!-- Header Card -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 mb-6">
            <div class="flex items-start justify-between mb-6">
                <div class="flex items-start space-x-4">
                    <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center">
                        <i data-lucide="building" class="h-8 w-8 text-gray-600"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900 mb-2"><%= internship.title %></h1>
                        <div class="flex items-center space-x-2 mb-3">
                            <i data-lucide="building" class="h-5 w-5 text-gray-400"></i>
                            <span class="text-lg font-medium text-gray-700"><%= internship.company %></span>
                        </div>
                        <div class="px-3 py-1 rounded-md text-sm font-medium border 
                            <%= internship.type === 'Remote' ? 'bg-green-100 text-green-800 border-green-200' : 
                                internship.type === 'Part-time' ? 'bg-blue-100 text-blue-800 border-blue-200' : 
                                'bg-gray-100 text-gray-800 border-gray-200' %>">
                            <%= internship.type %>
                        </div>
                    </div>
                </div>
                
                <% if (user) { %>
                    <% if (hasApplied) { %>
                        <div class="flex items-center space-x-2 px-6 py-3 bg-green-100 text-green-800 rounded-lg border border-green-200">
                            <i data-lucide="check-circle" class="h-5 w-5"></i>
                            <span class="font-medium">Applied</span>
                        </div>
                    <% } else if (user.role === 'student') { %>
                        <form action="/internships/<%= internship._id %>/apply" method="POST" class="inline">
                            <button
                                type="submit"
                                class="px-8 py-3 bg-secondary text-white font-medium rounded-lg hover:bg-secondary/90 transition-colors shadow-sm hover:shadow-md"
                                onclick="return confirm('Are you sure you want to apply for this internship?')"
                            >
                                Apply Now
                            </button>
                        </form>
                    <% } %>
                <% } else { %>
                    <a
                        href="/auth/login"
                        class="px-8 py-3 bg-secondary text-white font-medium rounded-lg hover:bg-secondary/90 transition-colors shadow-sm hover:shadow-md"
                    >
                        Login to Apply
                    </a>
                <% } %>
            </div>

            <!-- Quick Info -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 p-6 bg-gray-50 rounded-lg">
                <div class="flex items-center space-x-2">
                    <i data-lucide="map-pin" class="h-5 w-5 text-gray-400"></i>
                    <div>
                        <p class="text-sm text-gray-500">Location</p>
                        <p class="font-medium text-gray-900"><%= internship.location %></p>
                    </div>
                </div>
                <div class="flex items-center space-x-2">
                    <i data-lucide="clock" class="h-5 w-5 text-gray-400"></i>
                    <div>
                        <p class="text-sm text-gray-500">Duration</p>
                        <p class="font-medium text-gray-900"><%= internship.duration %></p>
                    </div>
                </div>
                <div class="flex items-center space-x-2">
                    <i data-lucide="dollar-sign" class="h-5 w-5 text-gray-400"></i>
                    <div>
                        <p class="text-sm text-gray-500">Stipend</p>
                        <p class="font-medium text-gray-900"><%= internship.stipend %></p>
                    </div>
                </div>
                <div class="flex items-center space-x-2">
                    <i data-lucide="calendar" class="h-5 w-5 text-gray-400"></i>
                    <div>
                        <p class="text-sm text-gray-500">Apply By</p>
                        <p class="font-medium text-gray-900">
                            <%= new Date(internship.applicationDeadline).toLocaleDateString('en-US', { 
                                weekday: 'short',
                                month: 'short', 
                                day: 'numeric', 
                                year: 'numeric' 
                            }) %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">
                <!-- About the Role -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">About the Role</h2>
                    <div class="prose prose-gray max-w-none">
                        <p class="text-gray-700 leading-relaxed"><%= internship.description %></p>
                    </div>
                </div>

                <!-- Requirements -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Requirements</h2>
                    <ul class="space-y-3">
                        <% internship.requirements.forEach(requirement => { %>
                            <li class="flex items-start space-x-3">
                                <i data-lucide="check-circle" class="h-5 w-5 text-success mt-0.5 flex-shrink-0"></i>
                                <span class="text-gray-700"><%= requirement %></span>
                            </li>
                        <% }) %>
                    </ul>
                </div>

                <!-- Skills -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Required Skills</h2>
                    <div class="flex flex-wrap gap-3">
                        <% internship.skills.forEach(skill => { %>
                            <span class="px-4 py-2 bg-indigo-50 text-primary font-medium rounded-lg border border-indigo-200">
                                <%= skill %>
                            </span>
                        <% }) %>
                    </div>
                </div>

                <!-- Application Form (for students) -->
                <% if (user && user.role === 'student' && !hasApplied) { %>
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h2 class="text-xl font-semibold text-gray-900 mb-4">Apply for this Internship</h2>
                    <form action="/internships/<%= internship._id %>/apply" method="POST" class="space-y-4">
                        <div>
                            <label for="coverLetter" class="block text-sm font-medium text-gray-700 mb-2">
                                Cover Letter (Optional)
                            </label>
                            <textarea
                                id="coverLetter"
                                name="coverLetter"
                                rows="4"
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none"
                                placeholder="Tell us why you're interested in this internship and what makes you a great fit..."
                            ></textarea>
                        </div>
                        <button
                            type="submit"
                            class="w-full px-6 py-3 bg-secondary text-white font-medium rounded-lg hover:bg-secondary/90 transition-colors"
                            onclick="return confirm('Are you sure you want to apply for this internship?')"
                        >
                            Submit Application
                        </button>
                    </form>
                </div>
                <% } %>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Application Details -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Application Details</h3>
                    <div class="space-y-4">
                        <div>
                            <p class="text-sm text-gray-500 mb-1">Posted</p>
                            <p class="font-medium text-gray-900">
                                <%= new Date(internship.createdAt).toLocaleDateString('en-US', { 
                                    weekday: 'long',
                                    month: 'long', 
                                    day: 'numeric', 
                                    year: 'numeric' 
                                }) %>
                            </p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 mb-1">Deadline</p>
                            <p class="font-medium text-orange-600">
                                <%= new Date(internship.applicationDeadline).toLocaleDateString('en-US', { 
                                    weekday: 'long',
                                    month: 'long', 
                                    day: 'numeric', 
                                    year: 'numeric' 
                                }) %>
                            </p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 mb-1">Status</p>
                            <p class="font-medium text-success">Open</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500 mb-1">Applications</p>
                            <p class="font-medium text-gray-900"><%= internship.applicationsCount || 0 %> received</p>
                        </div>
                    </div>
                </div>

                <!-- Company Info -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">About <%= internship.company %></h3>
                    <div class="flex items-center space-x-3 mb-4">
                        <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center">
                            <i data-lucide="building" class="h-6 w-6 text-gray-600"></i>
                        </div>
                        <div>
                            <p class="font-medium text-gray-900"><%= internship.company %></p>
                            <p class="text-sm text-gray-500">Technology Company</p>
                        </div>
                    </div>
                    <p class="text-gray-700 text-sm">
                        Join our innovative team and work on cutting-edge projects that impact millions of users worldwide.
                    </p>
                </div>

                <!-- Application Status (if applied) -->
                <% if (hasApplied && application) { %>
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Your Application</h3>
                    <div class="space-y-3">
                        <div>
                            <p class="text-sm text-gray-500">Status</p>
                            <span class="inline-flex px-2 py-1 text-sm font-medium rounded-full
                                <%= application.status === 'pending' ? 'bg-yellow-100 text-yellow-800' :
                                    application.status === 'accepted' ? 'bg-green-100 text-green-800' :
                                    application.status === 'rejected' ? 'bg-red-100 text-red-800' :
                                    'bg-blue-100 text-blue-800' %>">
                                <%= application.status.charAt(0).toUpperCase() + application.status.slice(1) %>
                            </span>
                        </div>
                        <div>
                            <p class="text-sm text-gray-500">Applied</p>
                            <p class="font-medium text-gray-900">
                                <%= new Date(application.createdAt).toLocaleDateString() %>
                            </p>
                        </div>
                        <% if (application.coverLetter) { %>
                        <div>
                            <p class="text-sm text-gray-500 mb-2">Cover Letter</p>
                            <p class="text-sm text-gray-700 bg-gray-50 p-3 rounded-lg">
                                <%= application.coverLetter %>
                            </p>
                        </div>
                        <% } %>
                    </div>
                </div>
                <% } %>

                <!-- Share -->
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Share This Opportunity</h3>
                    <div class="flex space-x-3">
                        <button onclick="shareOnLinkedIn()" class="flex-1 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition-colors">
                            LinkedIn
                        </button>
                        <button onclick="shareOnTwitter()" class="flex-1 px-4 py-2 bg-gray-800 text-white text-sm font-medium rounded-md hover:bg-gray-900 transition-colors">
                            Twitter
                        </button>
                        <button onclick="copyLink()" class="flex-1 px-4 py-2 bg-gray-200 text-gray-700 text-sm font-medium rounded-md hover:bg-gray-300 transition-colors">
                            Copy Link
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function shareOnLinkedIn() {
    const url = encodeURIComponent(window.location.href);
    const title = encodeURIComponent('<%= internship.title %> at <%= internship.company %>');
    window.open(`https://www.linkedin.com/sharing/share-offsite/?url=${url}&title=${title}`, '_blank');
}

function shareOnTwitter() {
    const url = encodeURIComponent(window.location.href);
    const text = encodeURIComponent('Check out this internship opportunity: <%= internship.title %> at <%= internship.company %>');
    window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank');
}

function copyLink() {
    navigator.clipboard.writeText(window.location.href).then(() => {
        alert('Link copied to clipboard!');
    }).catch(() => {
        alert('Failed to copy link');
    });
}
</script>